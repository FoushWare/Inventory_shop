<?xml version="1.0" encoding="utf-8"?><!--Layout for the editor activity-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin"
        tools:context=".EditorActivity">
        <!--overview category-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Editor_label"
                android:layout_weight="1"
                android:text="@string/category_overview"

                />

            <EditText
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif-medium"
                android:hint="@string/item_name"
                android:padding="16dp"
                android:textAppearance="?android:textAppearanceSmall"

                />
        </LinearLayout>

        <!--price-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Editor_label"
                android:layout_weight="1"
                android:text="price" />

            <EditText
                android:id="@+id/item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif-medium"
                android:hint="@string/price"
                android:inputType="number"
                android:padding="16dp"
                android:textAppearance="?android:textAppearanceSmall"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Editor_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/item_quantity" />

            <EditText
                android:id="@+id/item_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif-medium"
                android:hint="@string/item_quantity"
                android:inputType="number"
                android:padding="16dp"
                android:textAppearance="?android:textAppearanceSmall"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin">
            <!--quantity increase or decrease-->


            <Button

                android:id="@+id/button_increase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/button_decrease"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Order More "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <!--supplier-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Editor_label"
                android:layout_weight="1"
                android:text="@string/supplier"

                />

            <EditText
                android:id="@+id/item_supplier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/supplier"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>
        <!--supplier-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Editor_label"
                android:layout_weight="1"
                android:text="@string/supplier_email"

                />

            <EditText
                android:id="@+id/supplier_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/supplier_email"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Editor_label"
                android:text="extra" />

            <EditText
                android:id="@+id/Extra_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="2"
                android:hint="extra item number"
                android:textAppearance="?android:textAppearanceSmall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/compose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_send_black_24dp"
                android:text="@string/compose_button"
                android:textAppearance="?android:textAppearanceSmall" />

        </LinearLayout>


        <!--item image button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/editor_item_image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_img"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <!--item image-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/editor_item_image_view"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"

                />
        </LinearLayout>


    </LinearLayout>
    <!--linerLayout for the whole activity-->

</ScrollView>
